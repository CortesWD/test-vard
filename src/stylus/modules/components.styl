.container-video
	height 0
	left 0
	position relative
	top 0
	width 100%
	padding-bottom 60%
	z-index 0
	
	#video
		bottom 0
		cuadrado(100%)
		left 0
		position absolute
		right 0
		top 0


.menu-test
	box-shadow 0px 15px 15px 0px rgba(0,0,0,0.25)
	background-color $Verde
	column(1/3)
	position fixed
	opacity 0
	left -100%
	// padding 1rem
	height 100%
	transitionBase(0.3s)
	z-index 1
		
	ul
		padding 0
		margin 0
		list-style-type none
		
		li
			display block
			a
				color #fff
				display block
				padding 5rem 1rem
				transitionBase(0.3s)
				

				&:hover
					background-color darken($Verde, 40%)


.play
	background-color $Amarillo
	border-radius 100%
	cuadrado(20rem)
	cursor pointer
	left 50%
	position absolute
	top 50%
	z-index 10
	transform translate3d(-50%, -50%, 0)
